{
	"$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"virtualMachineSize": {
			"type": "string",
			"metadata": {
				"description": "Virtual machine size"
			}
		},
		"virtualMachineName": {
			"type": "string",
			"metadata": {
				"description": "Virtual machine name"
			}
		},
		"publisher": {
			"type": "string",
			"metadata": {
				"description": "Publisher"
			}
		},
		"offer": {
			"type": "string",
			"metadata": {
				"description": "Offer"
			}
		},
		"sku": {
			"type": "string",
			"metadata": {
				"description": "SKU"
			}
		},
		"version": {
			"type": "string",
			"metadata": {
				"description": "Version"
			}
		},
		"nicname": {
			"type": "string",
			"metadata": {
				"description": "NIC name"
			}
		},
		"adminUsername": {
			"type": "string",
			"metadata": {
				"description": "Default Admin username"
			}
		},
		"adminPassword": {
			"type": "securestring",
			"metadata": {
				"description": "Default Admin password"
			}
		},
		"location": {
			"type": "string",
			"metadata": {
				"description": "Location for all resources."
			}
		},
		"mainPrefix": {
			"type": "string",
			"metadata": {
				"description": "mainPrefix"
			}
		},
		"subnet1": {
			"type": "string",
			"metadata": {
				"description": "subnet1"
			}
		},
		"subnet2": {
			"type": "string",
			"metadata": {
				"description": "subnet2"
			}
		}
	},
	"variables": {},
	"resources": [{
			"name": "[parameters('virtualMachineName')]",
			"type": "Microsoft.Compute/virtualMachines",
			"apiVersion": "2017-03-30",
			"location": "[parameters('location')]",
			"comments": "VM being created",
			"dependsOn": [
				"[resourceId('Microsoft.Network/networkInterfaces/', parameters('nicname'))]"
			],
			"properties": {
				"osProfile": {
					"computerName": "[parameters('virtualMachineName')]",
					"adminUsername": "[parameters('adminUsername')]",
					"adminPassword": "[parameters('adminPassword')]"
				},
				"hardwareProfile": {
					"vmSize": "[parameters('virtualMachineSize')]"
				},
				"storageProfile": {
					"imageReference": {
						"publisher": "[parameters('publisher')]",
						"offer": "[parameters('offer')]",
						"sku": "[parameters('sku')]",
						"version": "[parameters('version')]"
					},
					"osDisk": {
						"createOption": "FromImage"
					},
					"dataDisks": []
				},
				"networkProfile": {
					"networkInterfaces": [{
						"properties": {
							"primary": true
						},
						"id": "[resourceId('Microsoft.Network/networkInterfaces', parameters('nicname'))]"
					}]
				}
			}
		},
			{
			"type": "Microsoft.Network/virtualNetworks",
			"name": "virtualNetwork",
			"apiVersion": "2017-06-01",
			"location": "[parameters('location')]",
			"comments": "This will build a Virtual Network.",
			"properties": {
				"addressSpace": {
					"addressPrefixes": [
						"[parameters('mainPrefix')]"
					]
				},
				"subnets": [{
						"name": "subnet1",
						"properties": {
							"addressPrefix": "[parameters('subnet1')]"
						}
					},
					{
						"name": "subnet2",
						"properties": {
							"addressPrefix": "[parameters('subnet2')]"
						}
					}
				]
			}
		},
		{
			"name": "nic-1",
			"type": "Microsoft.Network/networkInterfaces",
			"apiVersion": "2017-06-01",
			"location": "[parameters('location')]",
			"comments": "This will be your Primary NIC",
			"dependsOn": [
				"publicIpAddress",
				"networkSecurityGroup",
				"virtualNetwork"
			],
			"properties": {
				"ipConfigurations": [{
					"name": "ipconfig1",
					"properties": {
						"subnet": {
							"id": "virtualNetwork/subnets/subnet1"
						},
						"privateIPAllocationMethod": "Dynamic",
						"publicIpAddress": {
							"id": "[resourceId('Microsoft.Network/publicIPAddresses','publicIPAddress')]"
						}
					}
				}],
				"networkSecurityGroup": {
					"id": "[resourceId('Microsoft.Network/networkSecurityGroups', 'networkSecurityGroupName')]"
				}
			}
		},
		{
			"name": "publicIpAddress",
			"type": "Microsoft.Network/publicIPAddresses",
			"apiVersion": "2017-06-01",
			"location": "[parameters('location')]",
			"comments": "Public IP for your Primary NIC",
			"properties": {
				"publicIPAllocationMethod": "Dynamic"
			}
		},
		{
			"name": "networkSecurityGroup",
			"type": "Microsoft.Network/networkSecurityGroups",
			"apiVersion": "2016-09-01",
			"location": "[parameters('location')]",
			"comments": "Network Security Group (NSG) for your Primary NIC",
			"properties": {
				"securityRules": [{
					"name": "default-allow-ssh",
					"properties": {
						"priority": 1000,
						"sourceAddressPrefix": "*",
						"protocol": "Tcp",
						"destinationPortRange": "22",
						"access": "Allow",
						"direction": "Inbound",
						"sourcePortRange": "*",
						"destinationAddressPrefix": "*"
					}
				}]
			}
		}
	],
	"outputs": {}
}
